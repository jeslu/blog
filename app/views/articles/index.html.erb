<h1>Lista de Articulos</h1>
 
<table>
  <tr>
    <th>Titulo</th>
    <th>Descripcion</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td> <%= link_to 'eliminar', article_path(article), method: :delete, data:{confirm: 'esta seguro de eliminar'}%></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New article', new_article_path %>